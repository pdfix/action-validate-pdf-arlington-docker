{
    "name": "Validate PDF Arlington",
    "version": "v0.0.0",
    "actions": [
        {
            "title": "Arlington PDF Model in HTML",
            "name": "pdfix_validate_pdf_grammar_to_html_arlington",
            "desc": "Automatically checks grammar in a PDF using the Arlington PDF Model [Local]",
            "version": "v0.0.0",
            "icon": "arlington_html",
            "category": "Validation",
            "local": "True",
            "program": "docker run -v \"${working_directory}:/data\" --rm pdfix/validate-pdf-arlington:latest validate --format html --input \"/data/${input_pdf}\" --output \"/data/${output_html}\"",
            "args": [
                {
                    "name": "input_pdf",
                    "desc": "Input PDF file",
                    "flags": 2,
                    "ext": "pdf",
                    "type": "file_path",
                    "value": ""
                },
                {
                    "name": "output_html",
                    "desc": "Output HTML file",
                    "flags": 4,
                    "ext": "html",
                    "type": "file_path",
                    "value": ""
                }
            ],
            "errors": {
                "10": "Failed to parse arguments. Please check the usage and try again.",
                "11": "Input file does not exists.",
                "12": "Input file must be PDF document.",
                "13": "Input file must be PDF document and output file must be XML.",
                "14": "Input file must be PDF document and output file must be HTML.",
                "30": "Validation failed."
            }
        },
        {
