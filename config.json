{
    "name": "Validate PDF Arlington",
    "version": "v0.0.0",
    "actions": [
        {
            "title": "Validate PDF Grammar to HTML (Arlington)",
            "name": "pdfix_validate_pdf_grammar_to_html_arlington",
            "desc": "Automatically checks grammar in a PDF using the Arlington PDF Model [Local]",
            "version": "v0.0.0",
            "icon": "arlington_html",
            "category": "Validation",
            "local": "True",
            "program": "docker run -v \"${working_directory}:/data\" --rm pdfix/validate-pdf-arlington:latest validate --format html --input \"/data/${input_pdf}\" --output \"/data/${output_html}\"",
            "args": [
                {
                    "name": "max_failures",
                    "desc": "Limits the number of checked failures, and if set to -1, the entire document is checked",
                    "type": "int",
                    "value": "-1"
                },
                {
                    "name": "max_failures_displayed",
                    "desc": "Maximum number of failures to display. If set to -1, all failures are displayed",
                    "type": "int",
                    "value": "-1"
                },
                {
                    "name": "input_pdf",
                    "desc": "Input PDF file",
                    "flags": 2,
                    "ext": "pdf",
                    "type": "file_path",
                    "value": ""
                },
                {
                    "name": "output_html",
                    "desc": "Output HTML file",
                    "flags": 4,
                    "ext": "html",
                    "type": "file_path",
                    "value": ""
                }
            ]
        },
        {
            "title": "Validate PDF Grammar to XML (Arlington)",
            "name": "pdfix_validate_pdf_grammar_to_xml_arlington",
            "desc": "Automatically checks grammar in a PDF using the Arlington PDF Model [Local]",
            "version": "v0.0.0",
            "icon": "arlington_xml",
            "category": "Validation",
            "local": "True",
            "program": "docker run -v \"${working_directory}:/data\" --rm pdfix/validate-pdf-arlington:latest validate --format xml --input \"/data/${input_pdf}\" --output \"/data/${output_xml}\"",
            "args": [
                {
                    "name": "max_failures",
                    "desc": "Limits the number of checked failures, and if set to -1, the entire document is checked",
                    "type": "int",
                    "value": "-1"
                },
                {
                    "name": "max_failures_displayed",
                    "desc": "Maximum number of failures to display. If set to -1, all failures are displayed",
                    "type": "int",
                    "value": "-1"
                },
                {
                    "name": "input_pdf",
                    "desc": "Input PDF file",
                    "flags": 2,
                    "ext": "pdf",
                    "type": "file_path",
                    "value": ""
                },
                {
                    "name": "output_xml",
                    "desc": "Output XML file",
                    "flags": 4,
                    "ext": "xml",
                    "type": "file_path",
                    "value": ""
                }
            ]
        }
    ]
}
